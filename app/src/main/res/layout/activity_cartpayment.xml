<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cartpayment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="135dp"
        android:text="payment"
        android:textColor="#2E8BC0"
        android:textSize="30dp"
        android:textStyle="bold" />

    <com.braintreepayments.cardform.view.CardForm
        android:id="@+id/card_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="120dp"
        />

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="#2E8BC0"
        android:text="@string/buy_now"
        android:textColor="#FDFBFC" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_above="@+id/btnBuy"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="335dp"
        android:layout_marginBottom="87dp"
        app:srcCompat="@drawable/bt_ic_visa" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_above="@+id/btnBuy"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="254dp"
        android:layout_marginBottom="87dp"
        app:srcCompat="@drawable/bt_ic_mastercard" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_above="@+id/btnBuy"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="87dp"
        app:srcCompat="@drawable/bt_ic_discover" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_above="@+id/btnBuy"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="87dp"
        app:srcCompat="@drawable/bt_ic_diners_club" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_above="@+id/btnBuy"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="87dp"
        app:srcCompat="@drawable/bt_ic_jcb" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_above="@+id/btnBuy"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="19dp"
        app:srcCompat="@drawable/bt_ic_maestro" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_above="@+id/btnBuy"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="19dp"
        app:srcCompat="@drawable/bt_ic_hiper" />


</RelativeLayout>