<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".application">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/choose_your_positions"
        android:textColor="#2E8BC0"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pos1"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="46dp"
        android:autofillHints=""
        android:drawableLeft="@drawable/locationon"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="enter the starting point "
        android:inputType="textPersonName"
        android:textColorHint="#78909C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pos2"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="47dp"
        android:drawableLeft="@drawable/locationon"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="enter the arival point"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="160dp"
        android:backgroundTint="#2E8BC0"
        android:text="cherch" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/vector">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="170dp"
            android:text="payment"
            android:textColor="#2E8BC0"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="311dp"
            android:layout_marginBottom="200dp"
            app:srcCompat="@drawable/money" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="310dp"
            app:srcCompat="@drawable/distance" />

        <TextView
            android:id="@+id/distance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="444dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="290dp"
            android:text="@string/distance"
            android:textColor="#EDE6E6"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receipt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="217dp"
            android:text="@string/money"
            android:textColor="#EDE6E6"
            android:textSize="21sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="248dp"
            android:layout_marginTop="604dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="68dp"
            android:backgroundTint="#FAF7F7"
            android:text="pay with card"
            android:textColor="#0277BD"
            android:textSize="12sp" />

        <Button
            android:id="@+id/delivery"
            android:layout_width="162dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="604dp"
            android:layout_marginEnd="211dp"
            android:layout_marginBottom="65dp"
            android:backgroundTint="#BED5DD"
            android:text="pay on delivery"
            android:textColor="#2082BD"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="295dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="292dp"
            android:text="----"
            android:textColor="#FBF8F8"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/receipt"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="295dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="225dp"
            android:text="----"
            android:textColor="#FAF8F8"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>

